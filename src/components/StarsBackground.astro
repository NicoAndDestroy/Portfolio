---
const NUM_STARS = 100; // Número de estrellas
const stars = Array.from({ length: NUM_STARS }, (_, i) => ({
	id: i,
	x: Math.random() * 100,
	y: Math.random() * 100,
	delay: Math.random() * 10,
}));
---

<style>
	.stars {
		position: absolute; /* Fija las estrellas en el fondo */
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
		z-index: -1; /* Asegura que estén detrás del contenido */
	}
	
	.star {
		position: absolute;
		width: 3px; /* Tamaño de las estrellas */
		height: 2px;
		background-color: white;
		border-radius: 50%; /* Hace que las estrellas sean circulares */
		animation: twinkle 4s infinite ease-in-out; /* Efecto de parpadeo */
		animation-direction: alternate;
	}
	
	@keyframes twinkle {
		0%, 30% {
			opacity: 0.1;
		}
		30% {
			opacity: 0.3;
		}
	}
	</style>
	
	<div class="stars">
		{stars.map((star) => (
			<div
				class="star"
				style={`top: ${star.y}%; left: ${star.x}%; animation-delay: ${star.delay}s;`}
			></div>
		))}
	</div>