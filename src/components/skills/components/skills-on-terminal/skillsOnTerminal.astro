---
import TerminalIcon from '../../atoms/terminal-icon/TerminalIcon.astro';
import Terminal from '../terminal/Terminal.astro';
import './skills-on-terminal.css';
---

<Terminal nombre="NicoAndDestroy">
	<div class="terminal__skills">
		<h2>Skills</h2>
		<div class="terminal__skills__container">
			<TerminalIcon
				src="/assets/html.svg"
				color="#7738ff"
				name="HTML5"
			/>
			<TerminalIcon
				src="/assets/javascript.svg"
				color="#FF4747"
				name="Javascript"
			/>
			<TerminalIcon
				src="/assets/nodejs.svg"
				color="#00D1FF"
				name="Nodejs"
			/>
			<TerminalIcon 
				src="/assets/tailwind.svg" 
				color="#F3CBC2" 
				name="Tailwind" />
			<TerminalIcon 
				src="/assets/css.svg" 
				color="#00A3FF" 
				name="CSS" />
				<TerminalIcon 
				src="/assets/astro.svg" 
				color="#00A3FF" 
				name="Astro" />
		</div>
	</div>
</Terminal>
